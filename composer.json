{
    "name": "sharsie/php-coding-standard",
    "require": {
        "php": "^7.1",
        "friendsofphp/php-cs-fixer": "2.16.7"
    },
    "autoload": {
        "psr-4": {
            "Billplank\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "./vendor/bin/php-cs-fixer fix --config=.php_cs.dist --verbose --diff src/ tests/",
        "php-cs-fixer": "./vendor/bin/php-cs-fixer fix --config=.php_cs.dist --dry-run --verbose --diff src/ tests/"
    }
}
